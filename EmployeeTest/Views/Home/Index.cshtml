@model IEnumerable<EmployeeTest.Models.Employee>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Register", "RegisterEmployee") |@Html.ActionLink("Add Designation", "AddDesignation") |@Html.ActionLink("Attendance", "AddAttendance") |@Html.ActionLink("Attendance Record", "AttendanceByDate")
</p>
<div>
@using (Html.BeginForm())
{
  <span>Search by Category</span>  @Html.DropDownList("cat", ViewBag.Category as SelectList, "All", new { @class = "form-control" })
    <span>Search by Designation</span>  @Html.DropDownList("desg", ViewBag.Designation as SelectList, "All", new { @class = "form-control" })

    <input type="submit" value="Search" />

}
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Employee_First_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Employee_Middle_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Employee_Last_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DOB)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Employee_Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Designation_Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Employee_category)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Employee_Salary)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Employee_First_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Employee_Middle_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Employee_Last_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DOB)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Employee_Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.City)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Designation_Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Employee_category)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Employee_Salary)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditEmploye", new { id=item.Employee_Id }) |
            @Html.ActionLink("Delete", "DeleteEmployee", new { id=item.Employee_Id, onclick= "return confirm(sure want to delete?) " })
        </td>
    </tr>
}

</table>
